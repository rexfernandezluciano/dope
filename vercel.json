
{
  "rewrites": [
    {
      "source": "/v1/(.*)",
      "destination": "https://api.dopp.eu.org/v1/$1"
    },
    {
      "source": "/activitypub/(.*)",
      "destination": "https://api.dopp.eu.org/activitypub/$1"
    },
    {
      "source": "/.well-known/(.*)",
      "destination": "https://api.dopp.eu.org/.well-known/$1"
    }
  ],
  "headers": [
    {
      "source": "/v1/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, PATCH, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Requested-With, X-CSRF-Token"
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Access-Control-Max-Age",
          "value": "86400"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
